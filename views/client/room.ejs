<!doctype html>
<html>
<% include ../partial/head.ejs %>
<body>

<div class="container-fluid big-wraper">

    <div class="row top-section">
        <div class="col-md-12 col-xs-12">
          <% include ../partial/header.ejs %>

        </div>
    </div>

   <div class="content">
    <div class="row ">

      <div class="col-md-offset-1 col-md-10 col-xs-12">
        <div class="row ">

          <div class="col-md-12 col-xs-12">
        <div class="search">
          <!-- /contact info -->
          <div style="margin-bottom :20px; margin-top :20px;">
                  <div class="col-md-offset-2 col-md-3 col-sm-12 col-xs-12">

                  </div>
                  <div class="col-md-3 col-sm-12 col-xs-12">

                  </div>
                   <div class="col-md-3 col-sm-12 col-xs-12">
                     <button type="submit" class="btn btn-style blue">Search</button>
                   </div>
                 </div><br><br>
        </div>

      </div>

    </div>


    <div id="single" class="index-items container-fluid">

      <% for(i=0; i<room.length; i++) { %>
      <div class="row">

      <div class="col-md-3 col-xs-6">
        <div class=" index-item-box container-fluid">

      <div class="index-content-box">
        <a href="" class=""><img src="/<%= room[i].image %>" alt="" class="" height='170px' width='140px' ></a>

      </div>

    </div>
      </div>
      <div class="col-md-6 col-xs-6">
        <div class=" index-item-box container-fluid">
          <div class="text-center" ><h3><strong><%= room[i].category %> </strong>  <%= room[i].status %></h3></div>
      <div class="row">

        <div class="col-md-6 col-xs-12">

         <h4><strong>Location:</strong><%= room[i].location %> </h4>
         <h4><strong>Plot No:</strong> Ksh. <%= room[i].plot_no %> </h4>
        </div>
        <div class="col-md-6 col-xs-12">

         <h4><strong>Room No:</strong><%= room[i].room_no %> </h4>
         <h4><strong>Price:</strong> Ksh. <%= room[i].price %> </h4>

        </div>
      </div>
      <div class="text-center" ><p><strong></strong> <%= room[i].info %> </p></div>
    </div>
      </div>
      <div class="col-md-3 col-xs-12">
        <div class=" index-item-box container-fluid">

      <div class="index-content-box">

        <div class="index-cont" style="padding-top:40px">

      </div>
    </div>
      </div>

    </div>
  </div>
 <% } %>

 <hr><br>
     <div class="row">
       <% for(i=0; i<album.length; i++) { %>
     <div class="col-md-offset-1 col-md-3 col-xs-6">
       <div class=" index-item-box container-fluid">

     <div class="index-content-box">
       <a href="" class=""><img src="/<%= album[i].image %>" alt="" class="" height='100px' width='100px' ></a>
      
     </div>
     </div>
     </div>
     <% } %>
     </div>



    </div>
  </div>
</div>

  </div>

  <% include ../partial/footer.ejs %>

</div>

</body>
</html>
