<!doctype html>
<html>
<% include ../partial/head.ejs %>
<body>
<header>
  <% include ../partial/heady.ejs %>
  <% include ../partial/search.ejs %>
</header>
  <!-- ASIDE NAV AND CONTENT -->
  <div class="line">
     <div class="box">
        <div class="margin2x">
           <!-- CONTENT -->
           <section class="s-12 m-8 l-9 right">
              <h1>Top Ads</h1>
              <div class="margin">
                <% for(i=0; i<rooms.length; i++) { %>
                 <div class="s-12 m-6 l-4">
                   <a href="/room<%= rooms[i].id %>"><h4 class="" style="color : blue"><%= rooms[i].title %></h4></a>
                   <div class="s-12 m-4 l-4">

                    <a href="/room<%= rooms[i].id %>"><img src="/<%= rooms[i].image %>" ></a>
                    </div>
                    <div class="s-12 m-8 l-8" style="padding-left : 4px;">
                    <h4 class="margin-bottom"><strong>Location</strong> | <%= rooms[i].location %></h4>
                    <h4 class="margin-bottom"><strong>Posted On</strong> | <%= rooms[i].date %></h4>
                    <div class="customform s-12 margin-bottom2x center">
                       <h2 style="text-align : center; color : blue;"><strong>Ksh.</strong> | <%= rooms[i].price %></h2>
                    </div>
                 </div>
                 </div>
                  <% } %>
              </div>
           </section>
           <!-- ASIDE NAV -->
               <% include ../partial/aside.ejs %>
            </div>
         </div>
      </div>

        </div>
     </div>
  </div>
  <!-- FOOTER -->


  <% include ../partial/footer.ejs %>


<% include ../partial/footer-script.ejs %>
</body>
</html>
