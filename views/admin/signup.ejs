<!doctype html>
<html>
<% include ../partial/head.ejs %>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" required="true">
        </div>
        <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" name="username" required="true">
        </div>
        <div class="form-group">
            <label>Mobile No</label>
            <input type="text" class="form-control" name="phoneno" required="true">
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email" required="false" placeholder="Optional">
        </div>
        <div class="form-group">
            <label>Location</label>
            <input type="text" class="form-control" name="location" required="true">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" required="true">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password2" required="true">
        </div>


        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>

</div>
</body>
</html>
