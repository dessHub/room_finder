
<!doctype html>
<html>
<% include ../partial/admin-head.ejs %>
<body>
<div id="wrapper">
  <% include ../partial/dash-header.ejs %>
  <% include ../partial/side-bar.ejs %>

  <div id="page-wrapper" >
   <div id="page-inner">

     <div class="content">
      <div class="row ">

        <div class="col-md-12 col-xs-12">
          <div class="search">
            <div class="row ">

              <div class="col-md-offset 3 col-md-6 col-xs-12">
                <% if (success_msg){ %>
                    <div data-alert class="alert-box alert success radius" style="color : green">
                  <%= success_msg %>
                    </div>
                  <% } if (error_msg) { %>
                    <div data-alert class="alert-box warning radius" style="color : red">
                  <%= error_msg %>
                    </div>
              <% } %>
              </div>
            </div>

            <!-- /contact info -->

                    <form id="contact-form" method="POST" action="/add" enctype="multipart/form-data" >
                      <div class="row">
                    <div class="col-md-offset-2 col-md-3 col-sm-12 col-xs-12">
                      <div class="">
                       <select class="form-control" id="cat" name="category" required="true" style="background-color : inherit">
                         <option  value="">Select Category</option>
                         <option  value="Single Room">Single</option>
                         <option  value="Bed Sitter">Bed Sitter</option>
                         <option  value="One Bedroom">One Bedroom</option>
                         <option  value="Two Bedroom">Two BedRoom/option>
                         <option  value="Three Bedroom">Three BedRoom</option>
                       </select>
                     </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12">
                      <div class="">
                       <select class="form-control" id="location" required="true" name="location" style="background-color : inherit">
                         <option value="">Select Location</option>
                         <option value="Tudor">Tudor</option>
                         <option value="Kaachonjo">Kaa Chonjo</option>
                         <option value="Makupa">Makupa</option>
                         <option value="Sabasaba">Saba saba</option>


                       </select>
                     </div>
                    </div>

                   </div><br>
                     <div class="row">
                   <div class="col-md-offset-2 col-md-3 col-sm-12 col-xs-12">
                     <div class="form-group">
                         <label>Room No:</label>
                          <input class="form-control" type="text" name="room_no" required="true"/>
                       </div>
                      <div class="form-group">
                       <label>Plot No:</label>
                          <input class="form-control" type="text" name="plot_no" required="true"/>
                      </div>
                      <div class="form-group">
                       <label>Price:</label>
                          <input class="form-control" type="text" name="price" required="true"/>
                      </div>
                     </div>
                     <div class="col-md-3 col-sm-12 col-xs-12">
                       <div class="form-group">
                           <label>More Information:</label>
                            <textarea class="form-control" rows="3" name="info" required="true"></textarea>
                         </div>
                        <div class="form-group">
                            <label>Room Image:</label>
                             <input type="file" name="image" required="true"/>
                        </div>


                       </div>
                   </div>
                   <div class="row">
                     <div class="col-md-offset-4 col-md-3 col-sm-12 col-xs-12">
                       <button type="submit" class="btn btn-style blue">Create</button>
                       <button type="cancel" class="btn btn-style blue">Cancel</button>
                     </div>
                   </div>

                     </form>
                   <br><br>
          </div>

        </div>

      </div>




    </div>



</div>
</div>

</div>

<% include ../partial/dash-scripts %>
</body>
</html>
